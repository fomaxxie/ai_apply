<div class="navbar">
  <div class="navbar_logo">
    <%= link_to image_tag('logos/logo.PNG', alt: 'AiApply Logo'), root_path %>
  </div>
  <div class="navbar_links">
    <% if user_signed_in? %>
      <p><%= link_to 'Home', root_path %></p>
      <p><%= link_to 'Dashboard', dashboard_path %></p>
    <% else %>
      <p><%= link_to 'Login', new_user_session_path %></p>
      <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn-signup' %></p>
    <% end %>
  </div>
  <% if user_signed_in? %>
  <div class="user_email">
    <p><%= current_user.email %><p>
    <p><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn-login' %></p>
  </div>
  <% end %>
</div>
