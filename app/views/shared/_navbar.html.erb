<div class="navbar">
  <div class="navbar_logo">
    <%= link_to image_tag('logos/logo.png', alt: 'AiApply Logo'), root_path %>
  </div>
  <div class="navbar_links">
    <% if user_signed_in? %>
      <p><%= link_to 'Home', root_path %></p>
      <p><%= link_to 'Dashboard', dashboard_path %></p>
    <% else %>
      <button><%= link_to 'Login', new_user_session_path, class: 'btn-login' %></button>
      <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn-signup' %></p>
    <% end %>
  </div>
  <% if user_signed_in? %>
  <div class="user_email">
    <p><%= current_user.email %><p>
    <button><%= link_to 'Subsribe', new_subscription_path, class: 'btn-signup' %></button>
    <button><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-login" %></button>
  </div>
  <% end %>
</div>
